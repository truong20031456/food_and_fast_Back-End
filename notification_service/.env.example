
# Service Configuration
ENVIRONMENT=development
DEBUG=true
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8006

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/notification_service_db
REDIS_URL=redis://redis:6379/6
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672/

# External Services
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
ORDER_SERVICE_URL=http://localhost:8004

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Push Notifications (FCM)
FCM_SERVER_KEY=your_fcm_server_key

# Template Settings
EMAIL_TEMPLATE_PATH=/templates/emails/
SMS_TEMPLATE_PATH=/templates/sms/
PUSH_TEMPLATE_PATH=/templates/push/

# Queue Settings
NOTIFICATION_QUEUE_NAME=notifications
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=60

# Logging
LOG_LEVEL=INFO
