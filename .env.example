# ========================================
# üèóÔ∏è Food Fast E-commerce - Environment Configuration
# ========================================
# Copy this file to .env and update with your actual values

# ========================================
# üåç GLOBAL SETTINGS
# ========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# ========================================
# üîê SECURITY & AUTHENTICATION
# ========================================
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_database_password
DB_NAME=food_fast

# Database URLs for each service (auto-generated from above)
API_GATEWAY_DATABASE_URL=sqlite+aiosqlite:///./api_gateway.db
AUTH_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/auth_service_db
USER_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/user_service_db
PRODUCT_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/product_service_db
ORDER_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/order_service_db
PAYMENT_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/payment_service_db
NOTIFICATION_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/notification_service_db
ANALYTICS_SERVICE_DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/analytics_service_db

# ========================================
# üî¥ REDIS CONFIGURATION
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Redis URLs for each service (different databases)
API_GATEWAY_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
AUTH_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
USER_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/2
PRODUCT_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/3
ORDER_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/4
PAYMENT_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/5
NOTIFICATION_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/6
ANALYTICS_SERVICE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/7

# ========================================
# üöÄ SERVICE PORTS
# ========================================
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
PRODUCT_SERVICE_PORT=8003
ORDER_SERVICE_PORT=8004
PAYMENT_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
ANALYTICS_SERVICE_PORT=8007

# Service URLs (auto-generated)
AUTH_SERVICE_URL=http://auth_service:${AUTH_SERVICE_PORT}
USER_SERVICE_URL=http://user_service:${USER_SERVICE_PORT}
PRODUCT_SERVICE_URL=http://product_service:${PRODUCT_SERVICE_PORT}
ORDER_SERVICE_URL=http://order_service:${ORDER_SERVICE_PORT}
PAYMENT_SERVICE_URL=http://payment_service:${PAYMENT_SERVICE_PORT}
NOTIFICATION_SERVICE_URL=http://notification_service:${NOTIFICATION_SERVICE_PORT}
ANALYTICS_SERVICE_URL=http://analytics_service:${ANALYTICS_SERVICE_PORT}

# ========================================
# üåê CORS CONFIGURATION
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ========================================
# üìß EMAIL & NOTIFICATIONS
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=Food Fast <noreply@foodfast.com>

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key

# ========================================
# üí≥ PAYMENT GATEWAYS
# ========================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# VNPay (Vietnam)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn

# MoMo (Vietnam)
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_ENDPOINT=https://test-payment.momo.vn

# ========================================
# üîç SEARCH & ANALYTICS
# ========================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_PASSWORD=your_elastic_password

# ========================================
# üìä MONITORING
# ========================================
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# ========================================
# üîê OAUTH PROVIDERS
# ========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ========================================
# üìÅ FILE UPLOAD
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# AWS S3 (for production file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=food-fast-uploads
AWS_REGION=us-east-1

# ========================================
# ‚ö° PERFORMANCE & LIMITS
# ========================================
RATE_LIMIT_PER_MINUTE=100
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
REQUEST_TIMEOUT=30

# ========================================
# üîÑ MESSAGE QUEUE (Optional)
# ========================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/
