
# Service Configuration
ENVIRONMENT=development
DEBUG=true
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8003

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/product_service_db
REDIS_URL=redis://redis:6379/3
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672/

# External Services
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8006

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTIC_PASSWORD=elastic_secure_password

# JWT Configuration for service authentication
JWT_SECRET_KEY=your-service-jwt-secret-key
JWT_ALGORITHM=HS256

# Image Processing Configuration
IMAGE_UPLOAD_PATH=/uploads/products/
IMAGE_MAX_SIZE=5242880  # 5MB
IMAGE_ALLOWED_TYPES=jpg,jpeg,png,webp
THUMBNAIL_SIZES=150x150,300x300,800x600

# Logging
LOG_LEVEL=INFO
