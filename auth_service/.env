# Auth Service Environment Variables
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# App Info
APP_NAME=Auth Service
APP_VERSION=1.0.0
APP_DESCRIPTION=FastAPI Authentication Service
DEBUG=false

# Server
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8001

# Security
SECRET_KEY=0ijeGE7S9WNRuuKRljqpLc7skzdCnr4QhCLrGzJawuo
JWT_SECRET_KEY=YkFM0ltpF2NcaLwMSjhrEo8bqQOPFvVyXeUoXc5Ptak
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# Database
DATABASE_URL=postgresql+asyncpg://admin:${DATABASE_PASSWORD}@postgres:5432/auth_service_db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://redis:6379/1
REDIS_PREFIX=auth:

# Email (Use environment-specific values)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=${SMTP_HOST}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=${EMAIL_FROM}
EMAIL_FROM_NAME=Food & Fast 

# Frontend URLs
FRONTEND_URL=http://localhost:3000
PASSWORD_RESET_URL={}/auth/reset-password
EMAIL_VERIFY_URL={}/auth/verify-email

# CORS - Now using simple string format (supports both JSON and comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Headers
SECURITY_HEADERS=True

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Session
SESSION_COOKIE_NAME=auth_session
SESSION_COOKIE_MAX_AGE=86400