# General Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000

# JWT & Security
SECRET_KEY=your-very-secret-key
JWT_SECRET_KEY=your-gateway-jwt-secret-key
